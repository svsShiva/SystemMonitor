{
  "name": "system-monitor",
  "version": "1.0.0",
  "description": "Node Project",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "npm start"
  },
  "author": "Shiva Siripurapu",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "nodemon": "^1.19.4"
  }
}
